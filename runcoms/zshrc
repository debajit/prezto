#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

[[ -f $HOME/.aliases ]] && source $HOME/.aliases        # Custom aliases
[[ -f $HOME/.zshrc.local ]] && source $HOME/.zshrc.local    # Local config

# Customize to your needs...
export PATH="$PATH:$HOME/.mix/escripts" # Add Mix escripts to PATH
